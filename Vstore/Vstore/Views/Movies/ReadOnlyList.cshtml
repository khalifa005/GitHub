@model IEnumerable<Vstore.Models.Movie>
@{
    ViewBag.Title = "Index";
}



<table id="Movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movies</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>






@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#Movies").DataTable({
                ajax: {
                    url: "/api/Movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                        
                    },
                    {
                        data: "genre.name"
                    }
                ]
            });


           
        });
    </script>
}
